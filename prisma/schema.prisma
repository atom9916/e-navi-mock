generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model State {
  id        Int       @id @default(autoincrement())
  name      String
}

model Attendance {
  id        Int       @id @default(autoincrement())
  name      String    
}

model Tardiness {
  id        Int       @id @default(autoincrement())
  name      String
}

model Paid_off {
  id                Int       @id @default(autoincrement())
  user_email        String    @unique
  total_amount      Int       @default(10)
  used_amount       Int       @default(0)
  remaining_amount  Int       @default(10)
}

model Notification {
  id          Int       @id @default(autoincrement())
  created_at  DateTime
  deleted_at  DateTime
  content     String?
  create_user Int
  read_user   Int[]
}
